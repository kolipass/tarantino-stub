<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/grey_soft</item>
        <item name="colorPrimaryDark">@color/grey_soft</item>
        <item name="colorAccent">@color/grey_soft</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="DashBoardTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/grey_soft</item>

        <item name="android:actionModeBackground">@color/coral</item>

        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>
    </style>

    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="actionModeCloseButtonStyle">@style/Widget.AppCompat.ActionButton.CloseMode
        </item>
        <item name="titleTextStyle">@style/ActionMode.Title</item>
        <item name="subtitleTextStyle">@style/ActionMode.Subtitle</item>
        <item name="android:titleTextStyle">@style/ActionMode.Title</item>
        <item name="android:subtitleTextStyle">@style/ActionMode.Subtitle</item>
        <item name="background">@color/coral</item>
        <item name="android:background">@color/coral</item>
        <item name="actionModeBackground">@color/coral</item>
        <item name="android:actionModeBackground">@color/coral</item>
    </style>

    <style name="ActionMode.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/button_white_transparent_text_colors</item>
    </style>

    <style name="ActionMode.Subtitle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle">
        <item name="android:textColor">@color/button_white_transparent_text_colors</item>
    </style>

    <style name="myclosebutton" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mint</item>
        <item name="colorAccent">@color/mintAccent</item>
    </style>

    <style name="OrangeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellowish_orange</item>
        <item name="colorAccent">@color/yellowish_orange</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="OrangeStyle">
        <!-- potential other attributes -->
        <item name="theme">@style/OrangeTheme</item>
    </style>

    <style name="navigation_menu_button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="navigation_menu_button_caption">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Text styles -->
    <style name="text_small">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_medium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="text_18_regular">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_large">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_large_extra">
        <item name="android:textSize">42sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_large_light_32sp">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="text_large_36sp">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="text_label_orange" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/yellowish_orange</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_error_red" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="fines_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="recyclerViewStyle">
        <!-- NOTE: clipChildren should be false on API level 11 or later -->
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/margin_12</item>
        <item name="android:paddingLeft">@dimen/margin_12</item>
        <item name="android:paddingRight">@dimen/margin_12</item>
        <item name="android:paddingTop">@dimen/margin_12</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="finesCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">@dimen/list_item_elevation</item>
        <!--<item name="cardUseCompatPadding">true</item>-->
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginRight">2dp</item>

    </style>

    <style name="margin_4_12">
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:layout_marginBottom">@dimen/margin_4</item>
        <item name="android:layout_marginLeft">@dimen/margin_12</item>
        <item name="android:layout_marginRight">@dimen/margin_12</item>
    </style>
</resources>
